<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAD6BD"
    android:id="@+id/main"
    >

    <TextView
        android:id="@+id/textBrightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brightness"
        app:layout_constraintTop_toBottomOf="@+id/brightness"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/surfaceView"
        app:layout_constraintBottom_toTopOf="@id/layouttwo"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="151dp" />

    <Button
        android:id="@+id/captureFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Make Photo"
        android:onClick="onClick"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layouttwo"
        app:layout_constraintVertical_bias="0.941" />

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="108dp"
        android:layout_height="119dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@id/layouttwo"
        app:layout_constraintRight_toLeftOf="@id/brightness"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layouttwo"

        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/surfaceView"
        app:layout_constraintBottom_toTopOf="@id/captureFront"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="356dp">

        <EditText
            android:id="@+id/asciiImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:editable="false"
            android:enabled="false"
            android:fontFamily="monospace"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="6sp"
            android:typeface="monospace" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/sampleSize"
        android:layout_width="200dp"
        android:max="4"
        android:progress="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/surfaceView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/brightness"
        tools:layout_editor_absoluteX="259dp"
        tools:layout_editor_absoluteY="72dp" />

    <SeekBar
        android:id="@+id/brightness"
        android:layout_width="200dp"
        android:max="200"
        android:progress="75"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="259dp"
        app:layout_constraintTop_toBottomOf="@id/sampleSize"
        app:layout_constraintLeft_toRightOf="@id/surfaceView"
        app:layout_constraintBottom_toTopOf="@id/layouttwo"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="121dp" />

    <TextView
        android:id="@+id/textSample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_size"
        app:layout_constraintTop_toBottomOf="@id/sampleSize"
        app:layout_constraintLeft_toRightOf="@id/surfaceView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/brightness"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="74dp" />

</androidx.constraintlayout.widget.ConstraintLayout>